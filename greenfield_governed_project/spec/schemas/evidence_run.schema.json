{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Run Record",
  "description": "Schema for status/audit/**/run.json evidence records",
  "type": "object",
  "required": ["run_id", "timestamp_start", "timestamp_end", "command", "args", "exit_code", "cwd"],
  "properties": {
    "run_id": { "type": "string" },
    "timestamp_start": { "oneOf": [{ "type": "string" }, { "type": "null" }] },
    "timestamp_end": { "oneOf": [{ "type": "string" }, { "type": "null" }] },
    "command": { "type": "string" },
    "args": { "type": "array", "items": { "type": "string" } },
    "exit_code": { "type": "number" },
    "cwd": { "type": "string" },
    "actor": { "type": "string" },
    "intent_id": { "oneOf": [{ "type": "string" }, { "type": "null" }] },
    "stage": { "type": "string" },
    "run_json_path": { "type": "string" },
    "stdout": { "type": "string" },
    "stderr": { "type": "string" },
    "artefacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path"],
        "properties": {
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": true
}
