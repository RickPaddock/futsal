{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Internal Intents Feed",
  "description": "Generated portal feed of intents",
  "type": "object",
  "required": ["generated", "source", "requirements_source", "intents"],
  "properties": {
    "generated": {
      "type": "boolean",
      "const": true
    },
    "source": {
      "type": "string"
    },
    "requirements_source": {
      "type": "string"
    },
    "intents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["intent_id", "title", "status", "requirements_in_scope", "tasks"],
        "properties": {
          "intent_id": {
            "type": "string",
            "pattern": "^[A-Z]+-[0-9]{3,}$"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["todo", "draft", "closed"]
          },
          "created_date": {
            "oneOf": [
              { "type": "string", "const": "" },
              { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }
            ]
          },
          "closed_date": {
            "oneOf": [
              { "type": "string", "const": "" },
              { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" }
            ]
          },
          "requirements_in_scope": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title", "status", "tracking_implementation"],
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                },
                "tracking_implementation": {
                  "type": "string",
                  "enum": ["todo", "done"]
                }
              }
            }
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["task_id", "title", "status"],
              "properties": {
                "task_id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "status": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
